package ArvoreBinariaBusca;

import java.util.Scanner;

public class Main {

	public static void menu(){
		System.out.println("1 - Criar árvore");
		System.out.println("2 - Inserir");
		System.out.println("3 - Imprimir");
		System.out.println("4 - Buscar");
		System.out.println("Opção: ");
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int opcao;
        Scanner entrada = new Scanner(System.in);
        
        do{
            menu();
            opcao = entrada.nextInt();
            
            switch(opcao){
            case 1:
                Arvore arvoreBinBusca = new Arvore();
                break;
                
            case 2:
            	System.out.println("Digite o valor  ser inserido:");
            	int valor;
            	Scanner inserirValor = new Scanner(System.in);
                arvoreBinBusca.inserir(valor);
                break;
                
            case 3:
            	arvoreBinBusca.imprimirArvore();
            	break;
            	
            case 4:
            	System.out.println("Buscar não implementado");
            	
            default:
            	System.out.println("Opção inválida");
            	break;
            }
        }while(opcao != 0);

	}
}

